<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    card_view:cardElevation="8dp"
    android:layout_margin="3dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="5dp"
    android:background="@drawable/custom_item_layout"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp">

        <LinearLayout
            android:id="@+id/offer_screen_logo"
            android:layout_width="250dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/offer_screen_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="0dp"
                android:paddingRight="5dp"
                android:text="company name"
                android:textColor="#000"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/offer_screen_company_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/efaz_logo" />




        </LinearLayout>



        <android.support.v7.widget.CardView
            android:id="@+id/available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:elevation="3dp"
            card_view:cardCornerRadius="12dp">
            <TextView
                android:id="@+id/offer_screen_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="0dp"
                android:paddingRight="5dp"
                android:text="company name"
                android:textColor="#000"
                android:textSize="10sp"
                android:gravity="center_horizontal"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/offer_screen_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offer_screen_logo"
            android:layout_marginTop="5dp"
            android:text="My new Offer"
            android:textColor="#000"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/screen_offer_product_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/offer_screen_title"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/efaz_logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screen_offer_product_image"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <customfonts.MyEditText
                android:id="@+id/remain_days"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="#f0f0f4"
                android:enabled="false"
                android:hint="days"
                android:inputType="number"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_gravity="center"/>

            <customfonts.MyEditText
                android:id="@+id/remain_hours"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="#f0f0f4"
                android:enabled="false"
                android:hint="hours"
                android:inputType="number"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_gravity="center"/>

            <customfonts.MyEditText
                android:id="@+id/remain_minutes"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="#f0f0f4"
                android:enabled="false"
                android:hint="min"
                android:inputType="number"
                android:padding="2dp"
                android:paddingLeft="15dp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_gravity="center"/>


        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>